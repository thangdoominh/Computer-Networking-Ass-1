<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/default_profile_image"
        app:civ_border_width="5dp"
        app:civ_border_color="#E4B4CC"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop = "35dp"
        />
    <TextView
        android:id="@+id/user_id"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/profile_image"
        android:inputType="textMultiLine"
        android:text ="ID"
        android:textAlignment="center"
        android:textSize="20dp"
        android:drawableStart="@drawable/id_icon"
        android:background="@drawable/inputs"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        ></TextView>
    <EditText
        android:id="@+id/set_user_name"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/user_id"
        android:inputType="text"
        android:maxLength="16"
        android:hint ="Username"
        android:textAlignment="center"
        android:drawableStart="@drawable/edit_profile"
        android:background="@drawable/inputs"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        ></EditText>

    <EditText
        android:id="@+id/set_profile_status"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/set_user_name"
        android:inputType="text"
        android:hint ="I'm Online"
        android:textAlignment="center"
        android:maxLength="99"
        android:drawableStart="@drawable/edit_status"
        android:background="@drawable/inputs"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        ></EditText>
    <Button
        android:id="@+id/update_settings_button"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/set_profile_status"
        android:hint ="Update"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        android:textSize="25dp"
        >
    </Button>
    <Button
        android:id="@+id/back_button"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/update_settings_button"
        android:hint ="Back"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:textSize="25dp"
        ></Button>
    <Button
        android:id="@+id/back_settings_button"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/update_settings_button"
        android:hint ="Back"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        android:textSize="25dp"
        ></Button>
</RelativeLayout>