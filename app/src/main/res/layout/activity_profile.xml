<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/find_friends_toolbar"
        >
    </include>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/visit_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:civ_border_width="5dp"
        app:civ_border_color="#E681DB"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:src="@drawable/profile_image"
        />

    <TextView
        android:id="@+id/visit_profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/visit_profile_image"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:text="User name"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/visit_profile_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/visit_profile_name"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:text="Status here!!!"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/visit_profile_send_message_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/visit_profile_status"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Send Message"
        android:textAllCaps="false"
        android:background="#E1AAEB" />

    <Button
        android:id="@+id/visit_profile_decline_message_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/visit_profile_send_message_request"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Cancel Request"
        android:visibility="invisible"
        android:textAllCaps="false"
        android:background="#E1AAEB" />

</RelativeLayout>